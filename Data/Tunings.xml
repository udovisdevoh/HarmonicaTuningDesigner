    <Tuning id="richter" name="Richter">
        <Description>Standard 10-hole diatonic Richter tuning</Description>

        <Base holes="10">
            <Hole index="1">
                <Blow>1</Blow>
                <Draw>2</Draw>
            </Hole>
            <Hole index="2">
                <Blow>3</Blow>
