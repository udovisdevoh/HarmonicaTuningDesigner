                <Draw>7</Draw>
            </Hole>
            <Hole index="8">
                <Blow>3</Blow>
                <Draw>2</Draw>
            </Hole>
            <Hole index="9">
                <Blow>5</Blow>
                <Draw>4</Draw>
            </Hole>
            <Hole index="10">
                <Blow>1</Blow>
                <Draw>6</Draw>
            </Hole>
        </Base>

        <Expansions>
            <Expansion holes="12">
                <Prepend />
                <Append>
                    <Hole>
                        <Blow>3</Blow>
                        <Draw>5</Draw>
                    </Hole>
                    <Hole>
                        <Blow>5</Blow>
                        <Draw>7</Draw>
                    </Hole>
                </Append>
            </Expansion>

            <Expansion holes="14">
                <Prepend />
                <Append>
                    <Hole>
                        <Blow>1</Blow>
                        <Draw>2</Draw>
                    </Hole>
                    <Hole>
                        <Blow>3</Blow>
                        <Draw>4</Draw>
                    </Hole>
                </Append>
            </Expansion>

            <Expansion holes="16">
                <Prepend />
                <Append>
                    <Hole>
                        <Blow>5</Blow>
                        <Draw>6</Draw>
                    </Hole>
                    <Hole>
                        <Blow>1</Blow>
                        <Draw>7</Draw>
                    </Hole>
                </Append>
            </Expansion>
        </Expansions>
    </Tuning>

