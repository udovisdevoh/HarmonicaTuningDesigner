            </Hole>
            <Hole index="3">
                <Blow>5</Blow>
                <Draw>7</Draw>
            </Hole>
            <Hole index="4">
                <Blow>1</Blow>
                <Draw>2</Draw>
            </Hole>
            <Hole index="5">
                <Blow>3</Blow>
                <Draw>4</Draw>
            </Hole>
            <Hole index="6">
